                <Label Content="ID" HorizontalAlignment="Left" Margin="9,72,0,0" VerticalAlignment="Top" Background="{x:Null}" RenderTransformOrigin="0.846,1.747" FontSize="14" FontFamily="Arial" Width="115"/>
