            <Label Content="Kurs hinzufügen" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="50" Width="223" FontSize="30" FontFamily="72 Light"/>
            <Separator HorizontalAlignment="Left" Margin="233,20,0,0" VerticalAlignment="Top" Height="30" Width="557"/>
            <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="442,75,10,225">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
            <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="442,251,10,49">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
