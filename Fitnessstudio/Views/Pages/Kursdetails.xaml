                <Label Content="Teilnehmer" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top" Background="{x:Null}" RenderTransformOrigin="0.846,1.747" FontSize="14" FontFamily="Arial" Width="115"/>
                <TextBox Name="minTeilnehmer_tb" IsEnabled="False" HorizontalAlignment="Left" Margin="129,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" FontSize="14" RenderTransformOrigin="0.774,-0.657" Height="26"/>
                <TextBox Name="maxTeilnehmer_tb" IsEnabled="False" HorizontalAlignment="Left" Margin="27,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" FontSize="14" RenderTransformOrigin="0.774,-0.657" Height="26" Grid.Column="1"/>
