                <Label Content="Dauer" HorizontalAlignment="Left" Margin="10,301,0,0" VerticalAlignment="Top" Background="{x:Null}" RenderTransformOrigin="0.846,1.747" FontSize="14" FontFamily="Arial" Width="115"/>
                <TextBox Name="dauer_tb" IsEnabled="False" HorizontalAlignment="Left" Margin="129,301,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" FontSize="14" RenderTransformOrigin="0.774,-0.657" Height="26" Grid.ColumnSpan="2"/>
                <Label Content="min" HorizontalAlignment="Left" Margin="88,301,0,0" VerticalAlignment="Top" Background="{x:Null}" RenderTransformOrigin="0.846,1.747" FontSize="14" FontFamily="Arial" Width="51" Grid.Column="1"/>
