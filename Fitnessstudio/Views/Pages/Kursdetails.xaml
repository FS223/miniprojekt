                <TextBox Name="id_tb" IsEnabled="False" HorizontalAlignment="Left" Margin="129,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" FontSize="14" RenderTransformOrigin="0.774,-0.657" Grid.ColumnSpan="2" Height="26"/>
                <TextBox Name="bezeichnung_tb" IsEnabled="False" HorizontalAlignment="Left" Margin="129,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" FontSize="14" RenderTransformOrigin="0.774,-0.657" Grid.ColumnSpan="2" Height="26"/>
                <TextBox Name="beschreibung_tb" IsEnabled="False" HorizontalAlignment="Left" Margin="129,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" FontSize="14" RenderTransformOrigin="0.774,-0.657" Grid.ColumnSpan="2" Height="98"/>
