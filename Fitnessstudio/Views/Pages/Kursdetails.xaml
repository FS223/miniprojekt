            <Button Name="KursdetailsSpeichern_btn" Content="Save" Click="KursdetailsSpeichern_Click" HorizontalAlignment="Left" Margin="10,390,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
            <Button Name="KursdetailsBearbeiten_btn" Visibility="Collapsed" Content="Edit" Click="KursdetailsBearbeiten_Click" HorizontalAlignment="Left" Margin="65,390,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
            <Button Name="KursdetailsLoeschen_btn" Visibility="Collapsed" Click="KursLoeschen_Click" Content="Delete" HorizontalAlignment="Left" Margin="120,390,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
            
            <Button Content="Abbrechen" Click="KursdetailsAbbrechen_Click" HorizontalAlignment="Left" Margin="733,5,0,0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Page>
