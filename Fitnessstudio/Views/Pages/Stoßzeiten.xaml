<Page x:Class="Fitnessstudio.Stoßzeiten"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitnessstudio"
      xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="725" d:DesignWidth="1350"
      Title="Stoßzeiten">

    <Grid Background="Black">

        <WpfPlot x:Name="Timeplot" Margin="0,82,10,0" />

        <Button x:Name="UpdateTimeplot" HorizontalAlignment="Left" Margin="50,22,0,0" VerticalAlignment="Top" Height="60" Width="60" Background="Transparent" BorderThickness="0" Click="UpdateTimeplot_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="30"/>
                </Style>
            </Button.Resources>
            <Button.Content>
                <Image Source="/Images/gui-refresh.png" Margin="5"></Image>
            </Button.Content>


</Button>

    </Grid>

</Page>
