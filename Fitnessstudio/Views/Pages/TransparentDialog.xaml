<Page x:Class="Fitnessstudio.Views.Pages.TransparentDialog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitnessstudio.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TransparentDialog">

    <Grid Background="Transparent">
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Background="Transparent" Width="300" Height="200">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Dies ist eine transparente Dialogbox." HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                    <Button Content="OK" Margin="10"/>
                    <Button Content="Abbrechen" Margin="10"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
