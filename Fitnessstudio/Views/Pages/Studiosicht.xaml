<Page x:Class="Fitnessstudio.Views.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Fitnessstudio.Views"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Label Content="Studioübersicht" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <syncfusion:SfScheduler
        ItemsSource="{Binding scheduleAppointmentCollection}"
        x:Name="Schedule" 
        MaxHeight="200" 
        VerticalAlignment="Bottom"
        Margin="0,288,10,0"
        ViewType="TimelineDay"
        AllowedViewTypes="TimelineDay"
        EnableReminder="False"
        HeaderHeight="0"
        Background="White"
        Foreground="Red">

            <!-- Konfigurieren Sie die TimelineViewSettings -->
            <syncfusion:SfScheduler.TimelineViewSettings>
                <syncfusion:TimelineViewSettings
                StartHour="6"
                EndHour="23"
                TimeIntervalSize="120"/>
            </syncfusion:SfScheduler.TimelineViewSettings>

        </syncfusion:SfScheduler>


    </Grid>
</Page>